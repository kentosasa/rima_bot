doctype html
head
  == render 'templates/head'
body class="#{controller_name} #{action_name}"
  header
    == render 'templates/header', { group: @group }
  main
    = flash_message(flash)
    section.main
      .container
        == yield
  footer
    == yield :ad
    == render 'templates/footer'
  .fixed-footer
    == yield :footer
